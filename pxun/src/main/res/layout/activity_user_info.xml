<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/app_toolbar" />

    <LinearLayout
        android:id="@+id/ll_user_info_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/tab_item_selector">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="头像"
            android:textColor="@color/bgColor"/>

        <cn.peng.pxun.ui.view.HandIconView
            android:id="@+id/iv_user_info_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_nan"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_bigarraw"/>
    </LinearLayout>

    <ImageView style="@style/DivisionLine"
               android:layout_marginLeft="12dp"
               android:layout_marginRight="12dp"/>

    <LinearLayout
        android:id="@+id/ll_user_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/tab_item_selector">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="昵称"
            android:textColor="@color/bgColor"/>

        <TextView
            android:id="@+id/tv_user_info_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:layout_marginRight="12dp"
            android:paddingRight="12dp"
            android:lines="1"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_bigarraw"/>
    </LinearLayout>

    <ImageView style="@style/DivisionLine"
               android:layout_marginLeft="12dp"
               android:layout_marginRight="12dp"/>

    <LinearLayout
        android:id="@+id/ll_user_info_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/tab_item_selector">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="性别"
            android:textColor="@color/bgColor"/>

        <RadioGroup
            android:id="@+id/rg_user_info_sex"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:paddingRight="12dp">

            <RadioButton
                android:id="@+id/rb_user_info_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rb_user_info_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textColor="@color/black"/>
        </RadioGroup>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_bigarraw"/>
    </LinearLayout>

    <ImageView style="@style/DivisionLine"
               android:layout_marginLeft="12dp"
               android:layout_marginRight="12dp"/>

    <LinearLayout
        android:id="@+id/ll_user_info_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/tab_item_selector">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="生日"
            android:textColor="@color/bgColor"/>

        <TextView
            android:id="@+id/tv_user_info_birthday"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:layout_marginRight="12dp"
            android:paddingRight="12dp"
            android:lines="1"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_bigarraw"/>
    </LinearLayout>

    <ImageView style="@style/DivisionLine"
               android:layout_marginLeft="12dp"
               android:layout_marginRight="12dp"/>

    <LinearLayout
        android:id="@+id/ll_user_info_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/tab_item_selector">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="所在地"
            android:textColor="@color/bgColor"/>

        <TextView
            android:id="@+id/tv_user_info_address"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:layout_marginRight="12dp"
            android:paddingRight="12dp"
            android:lines="1"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_bigarraw"/>
    </LinearLayout>

    <ImageView style="@style/DivisionLine"
               android:layout_marginLeft="12dp"
               android:layout_marginRight="12dp"/>

    <LinearLayout
        android:id="@+id/ll_user_info_signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/tab_item_selector">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="个人签名"
            android:textColor="@color/bgColor"/>

        <TextView
            android:id="@+id/tv_user_info_signature"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:layout_marginRight="12dp"
            android:paddingRight="12dp"
            android:lines="1"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_bigarraw"/>
    </LinearLayout>

    <ImageView style="@style/DivisionLine"
               android:layout_marginLeft="12dp"
               android:layout_marginRight="12dp"/>

</LinearLayout>
